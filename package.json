{
  "name": "personal-finance-mcp-server",
  "version": "1.0.0",
  "description": "Personal Finance MCP Server with Streamable HTTP Transport",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test npm run test:integration",
    "test:integration": "NODE_ENV=test tsx --test --test-concurrency=1 --test-force-exit test/integration/**/*.test.ts",
    "build:widgets": "cd widgets && npm install && npm run build:all",
    "build": "shx mkdir -p public/widgets && npm run build:widgets && tsc && shx chmod +x build/*.js && shx mkdir -p build/prompts && shx cp src/prompts/*.txt build/prompts/",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "prepare": "npm run build",
    "dev": "tsc-watch --onSuccess \"node build/index.js\"",
    "sandbox:create": "tsx scripts/create-sandbox-user.ts",
    "sandbox:validate": "tsx scripts/validate-config.ts",
    "reset-user": "tsx scripts/reset-user.ts"
  },
  "files": [
    "build",
    "public",
    "src/prompts",
    "widgets/dist"
  ],
  "keywords": [
    "mcp",
    "personal-finance",
    "model-context-protocol"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clerk/express": "^1.7.35",
    "@clerk/mcp-tools": "^0.3.1",
    "@modelcontextprotocol/sdk": "^1.10.0",
    "@supabase/supabase-js": "^2.74.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "plaid": "^39.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.10",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "csv-parse": "^6.1.0",
    "nodemon": "^3.1.9",
    "shx": "^0.3.4",
    "supertest": "^7.1.4",
    "tsc-watch": "^7.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  }
}
