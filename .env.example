# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# Clerk Authentication
# Get these from: https://dashboard.clerk.com → API Keys
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# MCP Bearer Tokens (optional)
MCP_ALLOW_BEARER=false
MCP_BEARER_TEMPLATE_NAME=
MCP_BEARER_CACHE_TTL_MS=60000

# JWT Secret for Signed URLs
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This secret is used to sign time-limited download URLs for user data
JWT_SECRET=2a2c845e0f02ddac61fd9b10cf705a55ae3f10280653fadab9a5ff8461a71c2d

# Plaid API Configuration
# Get these from: https://dashboard.plaid.com → Team Settings → Keys
# For development/testing, use sandbox credentials
PLAID_CLIENT_ID=your_client_id_here
PLAID_SECRET=your_sandbox_secret_here
PLAID_ENV=sandbox

# Supabase Configuration
# Get these from: https://supabase.com/dashboard → Project Settings → API
# 1. Create a new project at https://supabase.com/dashboard
# 2. Go to Settings → API
# 3. Copy "Project URL" (starts with https://xxxxx.supabase.co)
# 4. Copy "anon public" key (starts with eyJ...)
# 5. Copy "JWT Secret"
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Encryption Key for Access Tokens
# Used for encrypting Plaid access tokens before storing in Supabase.
# The local seed script expects this exact value so that demo data can be decrypted.
ENCRYPTION_KEY=4b0d5da760c1f5e0d4d3a8a69045bdccb7084ff7ea9486567a6ca848a1a99627

# Anthropic API Configuration
# Get this from: https://console.anthropic.com → API Keys
# Used for AI-powered transaction categorization
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Cron Ignore List
# Comma-separated list of Clerk user IDs that background jobs should skip (demo accounts, etc.)
CRON_IGNORE_USER_IDS=
