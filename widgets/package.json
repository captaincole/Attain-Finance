{
  "name": "personal-finance-widgets",
  "version": "1.0.0",
  "description": "ChatGPT widgets for Personal Finance MCP",
  "type": "module",
  "scripts": {
    "build": "esbuild src/connected-institutions.tsx --bundle --format=esm --outfile=../public/widgets/connected-institutions.js",
    "build:css": "esbuild src/connected-institutions.css --bundle --outfile=../public/widgets/connected-institutions.css",
    "build:budget-list": "esbuild src/budget-list.tsx --bundle --format=esm --outfile=../public/widgets/budget-list.js",
    "build:all": "npm run build && npm run build:css && npm run build:budget-list",
    "watch": "npm run build -- --watch"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
